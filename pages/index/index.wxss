.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fff;
  padding: 0;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logo {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}

.message-container {
  height: calc(100vh - 300rpx);
  margin-bottom: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 20rpx;
}

.message-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.avatar.user {
  background-color: #87CEFA; /* 改为淡蓝色 */
}

.avatar.ai {
  background-color: #FFA07A; /* 改为淡橙色 */
}

.message-content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user .message-content {
  background-color: #E6F3FF; /* 改为淡蓝色 */
  color: #333; /* 改为深色文字 */
}

.ai .message-content {
  background-color: #FFF5EE; /* 改为淡橙色 */
  color: #333; /* 改为深色文字 */
}

.welcome-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.card-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.tips {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.tip-item text {
  font-size: 26rpx;
  color: #666;
}

.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.input-field {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  background-color: #87CEFA; /* 改为淡蓝色 */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  padding: 0;
}

.send-icon {
  width: 40rpx;
  height: 40rpx;
}

.message-list {
  flex: 1;
  width: 100%;
  overflow-y: auto;
  padding: 20rpx;
  margin-bottom: 120rpx;
}

.message-wrapper {
  display: flex;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.user-wrapper {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.avatar.user {
  background-color: #87CEFA;
  margin-left: 20rpx;
}

.avatar.ai {
  background-color: #FFA07A;
  margin-right: 20rpx;
}

.message-bubble {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 20rpx;
  position: relative;
}

.user-bubble {
  background-color: #007AFF;
  color: white;
  border-bottom-right-radius: 4rpx;
}

.ai-bubble {
  background-color: #f0f0f0;
  color: #333;
  border-bottom-left-radius: 4rpx;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #007AFF;
}
